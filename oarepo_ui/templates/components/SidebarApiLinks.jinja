{# def links #}
<section aria-label="API Links" class="ui segment">
    <div class="ui accordion sidebar-api-links">
        <div class="title flex">
            <h2 class="ui small header">{{_('API')}} {{_('Links')}}</h2>
            <i class="dropdown icon"></i>
        </div>
        <div class="content links-list">
        <div class="ui link list">
            {% for l in links.items() %}
                {# to not show draft link in published record detail page#}
                {% if "/api" in l.1 and "draft" not in l.0%}
                    <div class="item">
                        <i class="external alternate icon"></i>
                        <div class="content">
                            <a class="header" href="{{ l.1 }}" target="_blank">
                                {{ _("api." + l.0) }}
                            </a>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        </div>
    </div>
</section>

