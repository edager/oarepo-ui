.ui.segment {
  &.identifiers-and-links {
    .identifier {
      display: flex;
      flex-wrap: wrap;
      .copy-btn {
        opacity: 0.3;
        transition: opacity 0.3s;
        margin-left: auto;
      }
    }
    .identifier-type {
      background-color: @primaryColor;
    }
    .identifier-icon {
      color: rgba(0, 0, 0, 0.4);
    }
  }
}
