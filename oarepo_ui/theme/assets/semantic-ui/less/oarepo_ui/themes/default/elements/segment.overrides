.ui.segment {
  &.identifiers-and-links {
    .identifier {
      border: 2px solid @primaryColor;
      display: flex;
      flex-wrap: wrap;
      border-radius: 4px;
      .copy-btn {
        margin-left: auto;
        opacity: 0.3;
        transition: opacity 0.3s;
      }
    }
    .identifier-type {
      background-color: @primaryColor;
    }
  }
}
